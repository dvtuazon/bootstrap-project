{
  "name": "portfolio-project",
  "version": "1.0.0",
  "description": "Beverly Laurel Hotel website",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "clean": "rimraf dist",
    "imagemin": "imagemin img/* -o dist/img",
    "lite": "lite-server",
    "scss": "node-sass -o css/ css/",
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "watch:scss": "onchange \"css/*.scss\" -- npm run scss",
    "watch:all": "parallelshell \"npm run watch:scss\" \"npm run lite\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvtuazon/Portfolio-Project.git"
  },
  "author": "David",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dvtuazon/Portfolio-Project/issues"
  },
  "homepage": "https://github.com/dvtuazon/Portfolio-Project#readme",
  "dependencies": {
    "bootstrap": "^4.5.0",
    "bootstrap-social": "^5.1.1",
    "jquery": "^3.5.1",
    "lite-server": "^2.5.4",
    "minimist": "^1.2.6",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.12.0",
    "onchange": "^3.3.0",
    "parallelshell": "^3.0.1",
    "rimraf": "^2.6.2",
    "usemin-cli": "^0.5.1"
  }
}
